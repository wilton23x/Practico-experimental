class Program
{
    static void Main()
    {
        // Crear una lista de 500 ciudadanos con nombres ficticios
        string[] nombres = new string[500];
        for (int i = 0; i < 500; i++)
        {
            nombres[i] = "Ciudadano_" + (i + 1);
        }

        // Crear vacunados con Pfizer (75) sin repetir
        string[] pfizer = new string[75];
        RellenarVacunados(pfizer, nombres);

        // Crear vacunados con AstraZeneca (75) sin repetir
        string[] astra = new string[75];
        RellenarVacunados(astra, nombres);

        // Crear listas para resultados
        System.Collections.ArrayList noVacunados = new System.Collections.ArrayList();
        System.Collections.ArrayList ambas = new System.Collections.ArrayList();
        System.Collections.ArrayList soloPfizer = new System.Collections.ArrayList();
        System.Collections.ArrayList soloAstra = new System.Collections.ArrayList();

        // Revisar cada ciudadano y clasificar
        for (int i = 0; i < nombres.Length; i++)
        {
            bool enPfizer = Contiene(pfizer, nombres[i]);
            bool enAstra = Contiene(astra, nombres[i]);

            if (!enPfizer && !enAstra)
                noVacunados.Add(nombres[i]);
            else if (enPfizer && enAstra)
                ambas.Add(nombres[i]);
            else if (enPfizer)
                soloPfizer.Add(nombres[i]);
            else if (enAstra)
                soloAstra.Add(nombres[i]);
        }

        // Mostrar resultados
        System.Console.WriteLine("---- Ciudadanos que no se vacunaron ----");
        foreach (string c in noVacunados)
            System.Console.WriteLine(c);

        System.Console.WriteLine("\n---- Ciudadanos con ambas dosis ----");
        foreach (string c in ambas)
            System.Console.WriteLine(c);

        System.Console.WriteLine("\n---- Ciudadanos que solo recibieron Pfizer ----");
        foreach (string c in soloPfizer)
            System.Console.WriteLine(c);

        System.Console.WriteLine("\n---- Ciudadanos que solo recibieron AstraZeneca ----");
        foreach (string c in soloAstra)
            System.Console.WriteLine(c);
    }

    // Función para llenar vacunados sin repetir
    static void RellenarVacunados(string[] vacunados, string[] todos)
    {
        Random r = new Random();
        int llenados = 0;
        while (llenados < vacunados.Length)
        {
            int idx = r.Next(todos.Length);
            if (!Contiene(vacunados, todos[idx]))
            {
                vacunados[llenados] = todos[idx];
                llenados++;
            }
        }
    }

    // Función para buscar si un array contiene un valor
    static bool Contiene(string[] lista, string valor)
    {
        for (int i = 0; i < lista.Length; i++)
        {
            if (lista[i] == valor)
                return true;
        }
        return false;
    }
}
